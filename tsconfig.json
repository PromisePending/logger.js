{
  "allowSyntheticDefaultImports": true,
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "lib": ["ES6", "DOM", "ES2015", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "ESNext"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "build/src",
    "types": ["node", "chalk"],
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "src/tests"]
}
